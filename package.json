{
  "name": "recipe-book",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "npm run setup-images && npm run optimize-images && npm run convert-images-webp && npm run convert && NODE_ENV=production next build",
    "dev": "npm run setup-images && npm run optimize-images && npm run convert-images-webp && npm run convert && next dev --turbo",
    "start": "next start",
    "postinstall": "fumadocs-mdx",
    "setup-images": "node scripts/setup-recipe-images.js",
    "optimize-images": "node scripts/optimize-images.js",
    "convert-images": "node scripts/convert-images.js --all",
    "convert-images-webp": "node scripts/convert-images.js --all --webp",
    "analyze-images": "node scripts/convert-images.js --analyze",
    "test-webp": "node scripts/test-webp.js",
    "clean": "bash scripts/clean.sh",
    "convert-recipe": "node scripts/recipe-converter.js",
    "convert": "node scripts/recipe-converter.js --all"
  },
  "dependencies": {
    "@orama/orama": "^3.1.9",
    "fumadocs-core": "^15.6.0",
    "fumadocs-mdx": "^11.6.10",
    "fumadocs-ui": "^15.6.0",
    "glob": "^11.0.3",
    "keen-slider": "^6.8.6",
    "next": "^15.5.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.10",
    "@types/mdx": "^2.0.13",
    "@types/node": "24.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "eslint": "^8",
    "eslint-config-next": "15.3.4",
    "fast-glob": "^3.3.3",
    "gray-matter": "^4.0.3",
    "postcss": "^8.5.6",
    "sharp": "^0.34.2",
    "tailwindcss": "^4.1.10",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
