{
  "name": "Recipe Book - Next.js",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bullseye",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ms-vscode.vscode-json",
        "PKief.material-icon-theme",
        "formulahendry.auto-rename-tag",
        "christian-kohler.path-intellisense",
        "ms-vscode.vscode-react-javascript-snippets",
        "unifiedjs.vscode-mdx",
        "yzhang.markdown-all-in-one"
      ],
      "settings": {
        "typescript.preferences.importModuleSpecifier": "relative",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "files.associations": {
          "*.mdx": "mdx"
        },
        "emmet.includeLanguages": {
          "mdx": "jsx"
        },
        "tailwindCSS.includeLanguages": {
          "mdx": "html"
        }
      }
    }
  },
  "forwardPorts": [
    3000
  ],
  "portsAttributes": {
    "3000": {
      "label": "Next.js Dev Server",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "sudo npm install -g npm@latest && npm cache clean --force && npm install",
  "containerEnv": {
    "NODE_ENV": "development",
    "NEXT_TELEMETRY_DISABLED": "1"
  },
  // Enable Git and GitHub CLI
  "features": {
    "ghcr.io/devcontainers/features/git:1": {
      "ppa": false,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }
  },
  // Mount node_modules as named volume for better performance
  "mounts": [
    "source=recipe-book-node-modules,target=${containerWorkspaceFolder}/node_modules,type=volume"
  ]
}
